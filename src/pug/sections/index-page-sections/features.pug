include ../../mixins/main-btn
include ../../mixins/info-card
include ../../content/feature-list

section.lw-base-section.features
  .lw-container
    .features__section
      h2.lw-section-title Наши преимущества

      +main-btn({
        text: 'Связаться с нами',
        cls: 'main-btn--outlined'
      })

    .features__section
      ul.features__list
        each item of featuresList 
          li.features__list-item
            +info-card(item)
